<div class="account-form card d-flex justify-content-center">
  <div class="card-header text-center"><strong>Create Account Record</strong></div>
  <%= form_for @account_data, url: account_books_path do |f| %>
    <div class='form-group'>
      <%= f.text_field :name, placeholder: '*Name', autocomplete: 'off', class: 'form-control'  %>
    </div>
    <%= render 'select_box' %>
    <div class='form-group'>
      <%= f.text_field :amount, placeholder: '*Amount', autocomplete: 'off', class: 'form-control' %>
    </div>
    <div class='form-group'>
      <%= f.text_field :date, value: Date.today, autocomplete: 'off', class: 'form-control datepicker' %>
    </div>
    <div class='form-group'>
      <%= f.text_field :place, placeholder: 'Place',autocomplete: 'off', class: 'form-control' %>
    </div>
    <div class='form-group'>
      <%= f.text_area :comment, placeholder: 'Comment', class: 'form-control'  %>
    </div>
    <div class='form-actions text-center'>
      <%= f.submit "Create account record", class: 'btn btn-success'%>
    </div>
  <% end %>
</div>

